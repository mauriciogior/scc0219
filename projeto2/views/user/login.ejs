	password : "patrick"
}, {
	name : "Manuel",
	email : "manuel@gmail.com",
	password : "manuel",
	following : ["patrick@gmail.com"]
}]
</textarea>
			<button class="btn btn-default">Importar</button>
		</div>
		<div class="col-md-4">
			<h4>Postagens:</h4>
			<textarea class="form-control" rows="15">
